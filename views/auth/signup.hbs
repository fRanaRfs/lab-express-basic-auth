<div id="form">
  <form action="/signup" method="POST">
    <label> Username
      <input type="text" name="username" placeholder="username" />
    </label>
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
    <button type="submit">Create account</button>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>